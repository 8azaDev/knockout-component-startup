<div class="topic-list">
    <ul class="topic-list-wrapper vlist vlist--loose vlist--basis vlist--solid" data-bind="foreach: topics">
        <li class="topic-list-item">
            <topic k-avatar="avatar"
                   k-author="author"
                   k-title="title"
                   k-content="content">
            </topic>
        </li>
    </ul>
</div>
